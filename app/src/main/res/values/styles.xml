<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="AuthUITheme" parent="AppTheme">
        <item name="android:background">@color/lt_grey</item>
    </style>

    <style name="ButtonStyle">
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:background">@drawable/shape_rounded_corners</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Text Styles -->
    <style name="LogoLocationStyle">
        <item name="fontFamily">@font/archivo_black</item>
        <item name="android:textSize">68sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LogoRemindersStyle" parent="LogoLocationStyle">
        <item name="android:textSize">54sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
